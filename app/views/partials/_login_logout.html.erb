<% if admin? || user? %>
		
	<div id="logout_button">
		<%= link_to (image_tag('site/buttons/logout.jpg')), logout_path -%>
	</div>
	
<% else %>

	
	<table border="0" class='login_logout'>
		<tr>
			<td>
				<div id="register_button">
					<span><%= link_to 'New user registration', :controller => "users", :action => "request_dob" -%></span>
				</div>
			</td>
			<td>
				<div id="login_button">
					<span><%= link_to 'Login', login_path -%></span>
				</div>
			</td>
		</tr>
	</table>
	
	
<% end %>